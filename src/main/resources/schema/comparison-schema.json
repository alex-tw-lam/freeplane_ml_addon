{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "comparison": {
      "type": "object",
      "properties": {
        "dimension": {
          "type": "object",
          "properties": {
            "pole1": {"type": "string"},
            "pole2": {"type": "string"}
          },
          "required": ["pole1", "pole2"]
        },
        "concepts": {
          "type": "object",
          "patternProperties": {
            "^concept_[ab]$": {
              "type": "object",
              "properties": {
                "$pole1": {"type": "array", "items": {"type": "string"}},
                "$pole2": {"type": "array", "items": {"type": "string"}}
              },
              "additionalProperties": false
            }
          }
        }
      },
      "required": ["dimension", "concepts"]
    }
  },
  "required": ["comparison"]
}
